{
  "cli": {
    "version": ">= 3.0.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "resourceClass": "m1-medium"
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "resourceClass": "m1-medium",
        "simulator": true
      }
    },
    "production": {
      "ios": {
        "resourceClass": "m1-medium",
        "buildConfiguration": "Release",
        "distribution": "store",
        "env": {
          "NODE_ENV": "production",
          "EXPO_PUBLIC_ENVIRONMENT": "production"
        }
      },
      "android": {
        "buildType": "app-bundle",
        "gradleCommand": ":app:bundleRelease",
        "env": {
          "NODE_ENV": "production",
          "EXPO_PUBLIC_ENVIRONMENT": "production"
        }
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "support@sports360x.com",
        "ascAppId": "sports-360-x",
        "appleTeamId": "SPORTS360X"
      },
      "android": {
        "serviceAccountKeyPath": "./google-service-account.json",
        "track": "production"
      }
    }
  }
}